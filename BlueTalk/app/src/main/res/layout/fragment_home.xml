        <ListView
            android:id="@+id/lv"
            android:layout_width="wrap_content"
            android:layout_height="363dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="TextView" />

</FrameLayout>
